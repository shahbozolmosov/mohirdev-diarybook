<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-3">
      <form>
        <div class="mb-3">
          <label for="email" class="form-label">Name</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            value="{{user.email}}"
          />
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="name"
            class="form-control"
            name="name"
            id="name"
            value="{{user.name}}"
          />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
</div>